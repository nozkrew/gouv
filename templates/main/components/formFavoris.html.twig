{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<form name="app_main_favorisadd" action="{{ path('app_main_favorisadd', {'insee_code':city.inseeCode}) }}" method="POST">
    {% if city in app.user.cities %}
        <button class="btn btn-sm btn-primary" type="submit" data-toggle="tooltip" data-placement="top" title="Retirer des favoris">
            <i class="fas fa-star"></i>
        </button>
    {% else %}
        <button class="btn btn-sm btn-primary" type="submit" data-toggle="tooltip" data-placement="top" title="Ajouter aux favoris">
            <i class="far fa-star"></i>
        </button>
    {% endif %}
</form>
{% else %}
    <button type="button" class="btn btn-sm btn-primary"  data-toggle="modal" data-target="#requireLoginModal">
        <i class="far fa-star"></i>
    </button>
{% endif %}
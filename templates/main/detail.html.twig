{% extends 'base.html.twig' %}

{% block title %}{{city.name}}{% endblock %}

{% block body %}

<div class="container">
    <h3>{{city.name}}</h3>
    
    <h4>Démographie</h4>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://datafrance.info:443/{{city.slug|replace({' ':'-'})}}-{{city.zipCode}}/population/evolution-population?iframe=true" allowfullscreen></iframe>
    </div>
    
    <h4>Locataires / Propriétaires</h4>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://datafrance.info:443/{{city.slug|replace({' ':'-'})}}-{{city.zipCode}}/immobilier/location-achat?iframe=true" allowfullscreen></iframe>
    </div>
    
    <h4>Appartement / Maison</h4>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://datafrance.info:443/{{city.slug|replace({' ':'-'})}}-{{city.zipCode}}/immobilier/maison-appartement?iframe=true" allowfullscreen></iframe>
    </div>
    
    <h4>Nombre de pièces</h4>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://datafrance.info:443/{{city.slug|replace({' ':'-'})}}-{{city.zipCode}}/immobilier/nombre-pieces?iframe=true" allowfullscreen></iframe>
    </div>
    
    <h4>Taxe foncière</h4>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://datafrance.info:443/{{city.slug|replace({' ':'-'})}}-{{city.zipCode}}/immobilier/taxe-fonciere-bati?iframe=true" allowfullscreen></iframe>
    </div>    
</div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        
    </script>
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Réinitialisation du mot de passe</h1>
                            </div>
                            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset user' } }) }}                            
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                      {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control form-control-user', 'placeholder':'Entrez un mot de passe'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control form-control-user', 'placeholder':'Répétez le mot de passe'}}) }}
                                    </div>
                                </div>
                                {{ form_widget(form) }}
                                <div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="{{ 'resetting.reset.submit'|trans }}" />
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
</div>  
